@using JicoDotNet.Inventory.UI.Models;
@using JicoDotNet.Inventory.BusinessLayer.DTO.Class;
@using JicoDotNet.Inventory.Core.Enumeration
@model CustomPropertyModels

@{
    ViewBag.Title = "Your Custom Field(s)";
    ViewBag.Page = "/Custom/Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Set Your Custom Field(s)</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">Custom Field</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            @foreach (KeyValuePair<ECustomPropertyFor, int> pairs in Model._propertiesCount)
                            {
                                <div class="col-md-4">
                                    <div class="info-box">
                                        <a href="@Url.Action("Property", "Custom", new { id = Html.UrlIdEncrypt(pairs.Key, false) })" 
                                           class="info-box-icon bg-warning">
                                            <i class="fas fa-align-right"></i>
                                        </a>                                        
                                        <div class="info-box-content">
                                            <span class="info-box-text">@pairs.Key</span>
                                            <span class="info-box-number">@pairs.Value</span>
                                            <span class="info-box-text float-right">
                                                <a href="@Url.Action("Property", "Custom", new { id = Html.UrlIdEncrypt(pairs.Key, false) })">
                                                    Setup
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>