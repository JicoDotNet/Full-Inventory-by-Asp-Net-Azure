
@{
    ViewBag.Title = "AdjustDetail";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Stock Adjusted</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Stock")"> Stock</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">
                            Stock Adjusted
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <div class="callout callout-success">
                                    <h4 class="text-success">
                                        <i class="icon fas fa-exclamation-triangle"></i>
                                        <span data-lang-key="Limitation-Title">Successfull!</span>
                                    </h4>
                                    <p>
                                        You have successfully adjusted the stocks.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Adjust", "Stock", new { id = string.Empty })" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                        <a href="@Url.Action("Index", "Stock", new { id = string.Empty })" class="btn btn-success"><i class="fas fa-layer-group"></i> Current Stock</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>