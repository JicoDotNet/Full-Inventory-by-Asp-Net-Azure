@using JicoDotNet.Inventory.UI.Models;
@using JicoDotNet.Inventory.BusinessLayer.DTO.Class;
@model SMSSendTrack
@{
    ViewBag.Title = "Sms Sent Successful";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Invoice Send via SMS</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Retail" )">Retail</a></li>
                    <li class="breadcrumb-item active">Invoice</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">
                            SMS Sent Successful
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5 offset-md-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3 class="card-text text-success">
                                            SMS Sent Successfully
                                        </h3>
                                        <p class="card-text">
                                            Invoice sent to @Model.MobileNo
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5 offset-md-3">
                                <small class="card-text text-danger">
                                    Sms will be delivered only if the the Mobole is on and network is connected properly while you are sending.
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-5 offset-md-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="@Url.Action("Index", "Retail", new { id = string.Empty })" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                                        <a href="@Url.Action("UsedSMS", "Subscription")" class="btn btn-outline-primary">
                                            <i class="fas fa-binoculars"></i> View Used SMS
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
