@using JicoDotNet.Inventory.UI.Models;
@using JicoDotNet.Inventory.BusinessLayer.DTO.Class;
@using JicoDotNet.Inventory.Core.Models
@model BranchModels

@{
    ViewBag.Title = "Branch";
    ViewBag.Page = "/Branch/Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header" data-lang-sector="Section-Header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><span data-lang-key="Branch-Header">Branch</span></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Branch")">Branch</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content" data-lang-sector="Document-Branch">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">
                            @if (Model._branch != null)
                            {
                                <span data-lang-key="Title-Update"> Update </span>
                            }
                            else
                            {
                                <span data-lang-key="Title-Add"> Add </span>
                            }
                            <span data-lang-key="Title">Branch</span>
                        </h3>
                    </div>
                    @using (Html.BeginForm("Index", "Branch",
                        new
                        {
                            id = ((Model._branch != null) ?
                            Html.UrlIdEncrypt(Model._branch.BranchId.ToString(), false) : string.Empty)
                        },
                        FormMethod.Post, new { autocomplete = "off" }))
                    {
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-BranchName">Branch Name</span>
                                        </label>
                                        <input type="text" name="BranchName" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.BranchName)" </text> }
                                               placeholder="Enter Branch Name" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-BranchCode">Branch Code</span>
                                        </label>
                                        <input type="text" name="BranchCode" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.BranchCode)" </text> }
                                               placeholder="Enter Branch Code">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-Address">Branch Address</span>
                                        </label>
                                        <textarea name="Address" class="form-control"
                                                  placeholder="Enter Branch Address">@if (Model._branch != null) {<text>@Model._branch.Address </text>}</textarea>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-City">Branch City</span>
                                        </label>
                                        <input type="text" name="City" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.City)" </text> }
                                               placeholder="Enter City" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-State">Branch State</span>
                                        </label>
                                        <select class="form-control" name="State" style="width:100%;" required data-lang-sector="Document-System-State">
                                            <option value="">--Please Select--</option>
                                            @for (int i = 0; i < Model._State.Count; i++)
                                            {
                                                <option value="@Model._State.Keys.ElementAt(i)" data-lang-key="@Model._State.Keys.ElementAt(i)"
                                                        @if (Model._branch != null) { if (Model._State.Keys.ElementAt(i) == Model._branch.State) { <text> selected </text> } }>
                                                    @Model._State[Model._State.Keys.ElementAt(i)]
                                                </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-PostalCode">Zip/Pin Code</span>
                                        </label>
                                        <input type="text" name="PostalCode" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.PostalCode)" </text> }
                                               placeholder="Enter Postal Code">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-ContactPerson">Contact Person Name</span>
                                        </label>
                                        <input type="text" name="ContactPerson" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.ContactPerson)" </text> }
                                               placeholder="Enter Contact Person Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-Email">Email</span>
                                        </label>
                                        <input type="email" name="Email" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.Email)" </text> }
                                               placeholder="Enter Email">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-Phone">Phone</span>
                                        </label>
                                        <input type="text" name="Phone" class="form-control"
                                               @if (Model._branch != null) { <text> value="@(Model._branch.Phone)" </text> }
                                               placeholder="Enter Phone">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            <span data-lang-key="Label-Description">Details</span>
                                        </label>
                                        <textarea name="Description" class="form-control" placeholder="Enter Branch Type Details" style="height:38px;">@if (Model._branch != null) { <text> @Model._branch.Description </text>  }</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (Model._branch != null)
                            {
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                    <span data-lang-key="Form-Action-Update">Update</span>
                                </button>
                                <a href="@Url.Action("Index", "Branch", new { id = string.Empty })" class="btn btn-danger">
                                    <i class="fas fa-times"></i>
                                    <span data-lang-key="Form-Action-Cancel">Cancel</span>
                                </a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i>
                                    <span data-lang-key="Form-Action-Save">Save</span>
                                </button>
                            }
                            <button type="reset" class="btn btn-info">
                                <i class="fas fa-sync"></i>
                                <span data-lang-key="Form-Action-Reset">Reset</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title" data-lang-key="Table-Title">Branches</h3>
                    </div>
                    <div class="card-body" style="overflow-x:scroll;">
                        <table class="table table-striped table-bordered dt-responsive nowrap" data-table="normal">
                            <thead>
                                <tr>
                                    <th data-lang-key="Table-Action">Edit/Deactivate</th>
                                    <th data-lang-key="Table-BranchName">Branch Name/Code</th>
                                    <th data-lang-key="Table-Address">Address</th>
                                    <th data-lang-key="Table-PostalCode">City/Zip Code</th>
                                    <th data-lang-key="Table-State">State</th>
                                    <th data-lang-key="Table-ContactPerson">Contact Persone</th>
                                    <th data-lang-key="Table-Email">Email/Phone</th>
                                    <th data-lang-key="Table-Details">Details</th>
                                    <th data-lang-key="Table-Status">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model._branches != null)
                                {
                                    foreach (Branch branch in Model._branches)
                                    {
                                        <tr>
                                            <td>
                                                @if (branch.IsActive)
                                                {
                                                    <a class="btn btn-outline-success btn-flat" href="@Url.Action("Index", "Branch", new { id = Html.UrlIdEncrypt(branch.BranchId, false) })"
                                                       data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button onclick="DeactivateRecord(this)"
                                                            data-display="Branch Name/Code" data-value="@branch.BranchName/@branch.BranchCode"
                                                            data-controller="Branch" data-action="Deactivate"
                                                            data-id="@Html.UrlIdEncrypt(branch.BranchId)"
                                                            data-toggle="tooltip" data-placement="top"
                                                            class="btn btn-outline-danger btn-flat" title="Deactivate">
                                                        <i class="fas fa-trash-alt pull-right"></i>
                                                    </button>
                                                }
                                            </td>
                                            <td>
                                                @branch.BranchName /<br />
                                                @branch.BranchCode
                                            </td>
                                            <td>@branch.Address</td>
                                            <td>
                                                @branch.City /<br />
                                                @branch.PostalCode
                                            </td>
                                            <td data-lang-sector="Document-System-State">
                                                <span data-lang-key="@branch.State">
                                                    @Model._State[branch.State]
                                                </span>
                                            </td>
                                            <td>@branch.ContactPerson</td>
                                            <td>
                                                @branch.Email /<br />
                                                @branch.Phone
                                            </td>
                                            <td>@branch.Description</td>
                                            <td>
                                                @if (branch.IsActive)
                                                {
                                                    <span class="right badge badge-success" data-lang-key="Table-Status-Active">
                                                        Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="right badge badge-danger" data-lang-key="Table-Status-Inactive">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>