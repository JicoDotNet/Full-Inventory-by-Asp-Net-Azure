@using JicoDotNet.Inventory.UI.Models;
@using JicoDotNet.Inventory.BusinessLayer.DTO.Class;
@model VendorModels

@{
    ViewBag.Title = "Bank";
    ViewBag.Page = "/Vendor/Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Vendor</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Vendor")">Vendor</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Vendor Bank</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">
                            @if (Model._vendorBank != null)
                            {
                                <text> Update </text>
                            }
                            else
                            {
                                <text> Add </text>
                            }
                            Vendor Bank Details
                        </h3>
                    </div>
                    @using (Html.BeginForm("Bank", "Vendor",
                        new
                        {
                            id = ((Model._vendor != null) ?
                            Html.UrlIdEncrypt(Model._vendor.VendorId.ToString(), false) : string.Empty)
                        },
                        FormMethod.Post, new { autocomplete = "off" }))
                    {
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Name</label>
                                        <br />
                                        @if (Model._vendor != null)
                                        {<text> @Model._vendor.CompanyName </text>}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Type</label>
                                        <br />
                                        @if (Model._vendor != null)
                                        {<text> @Model._vendor.CompanyType </text>}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contact Person</label>
                                        <br />
                                        @if (Model._vendor != null)
                                        {<text> @Model._vendor.ContactPerson </text>}
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Account Name</label>
                                        <input type="text" name="AccountName" class="form-control form-control-sm" maxlength="512"
                                               @if (Model._vendorBank != null) { <text> value="@(Model._vendorBank.AccountName)" </text>  } else if (Model._vendor != null) { <text> value="@Model._vendor.CompanyName" </text> }
                                               placeholder="Account Name" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Account Number</label>
                                        <input type="text" name="AccountNumber" class="form-control form-control-sm" maxlength="60"
                                               @if (Model._vendorBank != null) { <text> value="@(Model._vendorBank.AccountNumber)" </text> }
                                               placeholder="Account Number" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>IFS Code</label>
                                        <input type="text" name="IFSC" class="form-control form-control-sm" maxlength="15"
                                               @if (Model._vendorBank != null) { <text> value="@(Model._vendorBank.IFSC)" </text> }
                                               placeholder="IFS Code" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Bank Name</label>
                                        <input type="text" name="BankName" maxlength="125"
                                               @if (Model._vendorBank != null) { <text> value="@Model._vendorBank.BankName" </text> }
                                               class="form-control form-control-sm" placeholder="Enter Bank Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>MICR Number</label>
                                        <input type="text" name="MICR" maxlength="16"
                                               @if (Model._vendorBank != null) { <text> value="@Model._vendorBank.MICR" </text> }
                                               class="form-control form-control-sm" placeholder="Enter MICR Number">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Branch Name</label>
                                        <input type="text" name="BranchName" maxlength="60"
                                               @if (Model._vendorBank != null) { <text> value="@Model._vendorBank.BranchName" </text> }
                                               class="form-control form-control-sm" placeholder="Branch Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contact Person</label>
                                        <input type="text" name="BranchAddress" maxlength="125"
                                               @if (Model._vendorBank != null) { <text> value="@Model._vendorBank.BranchAddress" </text> }
                                               class="form-control form-control-sm" placeholder="Branch Address">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (Model._vendorBank != null)
                            {
                                <button type="submit" class="btn btn-warning"> <i class="fas fa-edit"></i> Update </button>
                                <a href="@Url.Action("Bank", "Vendor", new { id = Html.UrlIdEncrypt(Model._vendor.VendorId.ToString(), false), id2 = string.Empty })" class="btn btn-danger"> <i class="fas fa-times"></i> Cancel</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
                                <a href="@Url.Action("Index", "Vendor", new { id = string.Empty })" class="btn btn-danger"> <i class="fas fa-times"></i> Cancel</a>
                            }
                            <button type="reset" class="btn btn-info"><i class="fas fa-sync"></i> Reset</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header bg-cyan">
                        <h3 class="card-title">
                            @if (Model._vendor != null)
                            {<text> @Model._vendor.CompanyName </text>}'s Banks
                        </h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Edit/Deactivate</th>
                                    <th>Account Name</th>
                                    <th>Account Number</th>
                                    <th>Bank Name/Branch</th>
                                    <th>IFS Code</th>
                                    <th>MICR</th>
                                    <th>Branch Address</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model._vendorBanks != null)
                                {
                                    foreach (VendorBank vendorBank in Model._vendorBanks)
                                    {
                                        <tr>
                                            <td>
                                                @if (vendorBank.IsActive)
                                                {
                                                    <a class="btn btn-outline-success btn-flat" href="@Url.Action("Bank", "Vendor", new { id = Html.UrlIdEncrypt(vendorBank.VendorId, false), id2 = vendorBank.VendorBankId })"
                                                       data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button onclick="DeactivateRecord(this)"
                                                            data-display="Account Name/Number" data-value="@vendorBank.AccountName/@vendorBank.AccountNumber"
                                                            data-controller="Vendor" data-action="BankDeactivate"
                                                            data-id="@Html.UrlIdEncrypt(vendorBank.VendorId)"
                                                            data-id2="@vendorBank.VendorBankId"
                                                            data-toggle="tooltip" data-placement="top"
                                                            class="btn btn-outline-danger btn-flat" title="Deactivate">
                                                        <i class="fas fa-trash-alt pull-right"></i>
                                                    </button>
                                                }
                                            </td>
                                            <td>
                                                @vendorBank.AccountName
                                            </td>
                                            <td>
                                                @vendorBank.AccountNumber
                                            </td>
                                            <td>
                                                @vendorBank.BankName<br />
                                                @vendorBank.BranchName
                                            </td>
                                            <td>
                                                @vendorBank.IFSC
                                            </td>
                                            <td>
                                                @vendorBank.MICR
                                            </td>
                                            <td>
                                                @vendorBank.BranchAddress
                                            </td>
                                            <td>
                                                @if (vendorBank.IsActive)
                                                {
                                                    <span class="right badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="right badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>