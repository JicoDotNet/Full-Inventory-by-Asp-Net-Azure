@using JicoDotNet.Inventory.UI.Models;
@using JicoDotNet.Inventory.BusinessLayer.DTO.Class;

@{
    ViewBag.Title = "Purchase Order";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Purchase Order</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Purchase")"> Purchase Order</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="@Url.Action("Order", "Purchase")" class="btn btn-success pl-3 pr-3"><i class="fas fa-plus"></i> Generate New PO</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12" data-partial="index">
                <div class="card">
                    <div class="card-body">
                        <div class="overlay text-center m-5">
                            <i class="fas fa-sync-alt fa-spin fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section BodyScript{
    <script type="text/javascript">
        $(document).ready(() => {
            // Call Partial
            $.ajax({
                type: "GET",
                url: "@Url.Action("PartialIndex", "Purchase")",
                contentType: "application/json; charset=utf-8",
                dataType: "text",
                success: function (data) {
                    $('[data-partial="index"]').html(data);
                    loadDatatable();
                },
                failure: function (response) {
                    console.log(response.responseText);
                },
                error: function (response) {
                    console.log(response.responseText);
                }
            });
        });
    </script>
}