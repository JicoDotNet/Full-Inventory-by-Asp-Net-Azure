@using JicoDotNet.Inventory.UI.Report.Models;
@using JicoDotNet.Inventory.Core.Report
@model SalesReportModels

<table class="table table-striped table-bordered dt-responsive nowrap" data-table="report">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Mobile</th>
            <th>GST Number</th>
            <th>No of Invoice</th>
            <th>Invoice Amount</th>
            <th>Tax Amount</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model._rCustomerSales != null)
        {
            foreach (ResponseCustomerSalesResult rCustomerSales in Model._rCustomerSales)
            {
                <tr>
                    <td>
                        @rCustomerSales.CompanyName
                    </td>
                    <td>
                        @rCustomerSales.Mobile
                    </td>
                    <td>
                        @if (rCustomerSales.IsGSTRegistered)
                        {
                            @rCustomerSales.GSTNumber
                        }
                        else
                        {
                            <text>Unregistered</text>
                        }
                    </td>
                    <td>
                        @rCustomerSales.TotalInvoiceCount
                    </td>
                    <td>
                        @rCustomerSales.SumInvoicedAmount.ToDisplayDecimal()
                    </td>
                    <td>
                        @rCustomerSales.SumTaxAmount.ToDisplayDecimal()
                    </td>
                    <td>
                        @rCustomerSales.SumTotalAmount.ToDisplayDecimal()
                    </td>
                </tr>
            }
        }
    </tbody>
</table>