@using JicoDotNet.Inventory.UI.Report.Models;
@using JicoDotNet.Inventory.Core.Report
@model PurchaseReportModels

<table class="table table-striped table-bordered dt-responsive nowrap" data-table="report">
    <thead>
        <tr>
            <th>Vendor Name</th>
            <th>Mobile</th>
            <th>GST Number</th>
            <th>No of Bills</th>
            <th>Bill Amount</th>
            <th>Tax Amount</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model._rVendorPurchase != null)
        {
            foreach (ResponseVendorPurchaseResult rVendorPurchase in Model._rVendorPurchase)
            {
                <tr>
                    <td>
                        @rVendorPurchase.CompanyName
                    </td>
                    <td>
                        @rVendorPurchase.Mobile
                    </td>
                    <td>
                        @if (rVendorPurchase.IsGSTRegistered)
                        {
                            @rVendorPurchase.GSTNumber
                        }
                        else
                        {
                            <text>Unregistered</text>
                        }
                    </td>
                    <td>
                        @rVendorPurchase.TotalBillCount
                    </td>
                    <td>
                        @rVendorPurchase.SumBilledAmount.ToDisplayDecimal()
                    </td>
                    <td>
                        @rVendorPurchase.SumTaxAmount.ToDisplayDecimal()
                    </td>
                    <td>
                        @rVendorPurchase.SumTotalAmount.ToDisplayDecimal()
                    </td>
                </tr>
            }
        }
    </tbody>
</table>